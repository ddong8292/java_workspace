<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>

<fx:root fx:id="root" type="javafx.scene.layout.BorderPane" xmlns:fx="http://javafx.com/fxml">

	<top>
		<ToolBar BorderPane.alignment="CENTER">
			<items>
				<Button fx:id="btn_Save" id="btn_save" prefHeight="25.0" prefWidth="25.0"/>
				<Button fx:id="btn_Pen">
					<graphic>
						<ImageView fitHeight="25.0" fitWidth="25.0">
							<image>
								<Image url="@icons1/pen.png" />
							</image>
						</ImageView>
					</graphic>
				</Button>
				<Button fx:id="btn_Eraser">
					<graphic>
						<ImageView fitHeight="25.0" fitWidth="25.0">
							<image>
								<Image url="@icons1/eraser.png" />
							</image>
						</ImageView>
					</graphic>
				</Button>
				<Button fx:id="btn_Text">
					<graphic>
						<ImageView fitHeight="25.0" fitWidth="25.0">
							<image>
								<Image url="@icons1/text.png" />
							</image>
						</ImageView>
					</graphic>
				</Button>
				
				<Button fx:id="btn_Load">
					<graphic>
						<ImageView fitHeight="25.0" fitWidth="25.0">
							<image>
								<Image url="@icons1/loadfile.png" />
							</image>
						</ImageView>
					</graphic>
				</Button>
				<Button fx:id="btn_capture">
					<graphic>
						<ImageView fitHeight="25.0" fitWidth="25.0">
							<image>
								<Image url="@icons1/capture.png" />
							</image>
						</ImageView>
					</graphic>
				</Button>
				<ColorPicker fx:id="colorPicker"/>
			</items>
		</ToolBar>
	</top>
	<center>
		<StackPane fx:id="stackPane">
			<children>
				<AnchorPane fx:id="anchorPane"/>
				<Canvas fx:id="canvas" BorderPane.alignment="CENTER"/>
			</children>
		</StackPane>
	</center>
	<right>
		<ScrollPane prefWidth="250.0" BorderPane.alignment="CENTER">
			<content>
				<VBox fx:id="vbox">
					<children>

					</children>
				</VBox>
			</content>

		</ScrollPane>
	</right>
</fx:root>